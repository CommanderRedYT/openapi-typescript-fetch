{
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "typescript.tsdk": "node_modules/typescript/lib",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/lib": true,
        "**/node_modules": true,
        "**/coverage": true,
        "**/tsconfig.tsbuildinfo": true,
        "**/yarn-error.log": true
    }
}